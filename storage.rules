rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Student submissions: submissions/{courseId}/{assignmentId}/{studentId}/...
    match /submissions/{courseId}/{assignmentId}/{studentId}/{fileName} {
      allow read: if request.auth != null; // or restrict to same course members later
      allow write: if request.auth != null && request.auth.uid == studentId; // owner-only
    }

    // Optional materials uploaded by teachers
    match /materials/{courseId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.token.role == "teacher" || request.auth.token.role == "admin");
    }
  }
}


